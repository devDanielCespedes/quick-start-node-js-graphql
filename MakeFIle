# VariÃ¡veis para os serviÃ§os no Docker
DOCKER_BACKEND=quickstart_backend

# ğŸ”„ Atualiza o Prisma Client
prisma-update:
	docker exec -it $(DOCKER_BACKEND) pnpm prisma generate

# ğŸ“¦ Aplica migraÃ§Ãµes no banco dentro do container
prisma-migrate:
	docker exec -it $(DOCKER_BACKEND) pnpm prisma migrate dev --name update_schema

# âš¡ Reseta o banco e aplica as migraÃ§Ãµes novamente
prisma-reset:
	docker exec -it $(DOCKER_BACKEND) pnpm prisma migrate reset --force

# ğŸ› ï¸ Roda todos os comandos do Prisma (gera cliente, aplica migraÃ§Ã£o e reseta banco)
prisma-full:
	make prisma-update
	make prisma-migrate
	make prisma-reset

# ğŸš€ Reinicia os containers do Docker
docker-restart:
	docker compose down
	docker compose up -d

# ğŸ”„ Executa o Prisma Studio para visualizar os dados (fora do container)
prisma-studio:
	pnpm prisma studio

# ğŸ”„ Executa o Prisma Studio dentro do container
prisma-studio-docker:
	docker exec -it $(DOCKER_BACKEND) pnpm prisma studio
